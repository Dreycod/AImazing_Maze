<Window x:Class="ArduinoMAZE.DBConnection_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduinoMAZE"
        mc:Ignorable="d"
        Title="DB Connection" Height="300" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="Database Connection" FontSize="15" Height="25" HorizontalAlignment="Center"/>
            <TextBox x:Name="TB_Server" Width="180" Height="30" Margin="0,0,0,10" Text="URL"/>
            <TextBox x:Name="TB_User" Width="180" Height="30" Margin="0,0,0,10" Text="User"/>
            <TextBox x:Name="TB_Password" Width="180" Height="30" Margin="0,0,0,10" Text="Password"/>
            <TextBox x:Name="TB_DB" Width="180" Height="30" Margin="0,0,0,10" Text="Database"/>
            <TextBox x:Name="TB_Port" Width="180" Height="30" Margin="0,0,0,10" Text="Port"/>
            <Button x:Name="BTN_Connect" Content="Connect" Width="180" Height="30" Click="BTN_Connect_Click"/>
        </StackPanel>

    </Grid>
</Window>
